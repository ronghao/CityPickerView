<?xml version="1.0" encoding="utf-8"?>
<com.haohaohu.citypickerview.CityPickerView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

  <com.haohaohu.citypickerview.WheelView
      android:id="@+id/id_province"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      >

  </com.haohaohu.citypickerview.WheelView>

  <com.haohaohu.citypickerview.WheelView
      android:id="@+id/id_city"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      >

  </com.haohaohu.citypickerview.WheelView>

  <com.haohaohu.citypickerview.WheelView
      android:id="@+id/id_district"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      >

  </com.haohaohu.citypickerview.WheelView>

</com.haohaohu.citypickerview.CityPickerView>
